{
    "name": "friendsofhyperf/jet",
    "description": "Another jet client for Hyperf (PHP5.3)",
    "type": "library",
    "license": "MIT",
    "authors": [{
        "name": "Huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "require": {
        "php": "^5.0|~7.0.0",
        "ext-curl": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\Jet\\": "src/"
        },
        "files": [
            "src/autoload.php"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-1.x": "1.3-dev"
        }
    },
    "scripts": {
        "cs": "php-cs-fixer fix $1",
        "lint": "find src/ -type f -name '*.php' -print0 | xargs -0 -L1 -P4 -- php -l -f",
        "test": [
            "php tests/MetadataManagerTest.php",
            "php tests/RegistryTest.php",
            "php tests/ClientTest.php"
        ]
    }
}